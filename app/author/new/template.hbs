<div class="section">
  <div class="container">
    <div class="content">
      <h2 class="page-title">New Author</h2>
    </div>

    {{#simple-form onsubmit=(action "saveAuthor") as |formValues|}}
      {{input value=formValues.firstName type="text" class="input-first-name"}}
      {{input value=formValues.lastName type="text" class="input-last-name"}}


      <button type="submit" class="submit">Save</button>
    {{/simple-form}}
  </div>

</div>
